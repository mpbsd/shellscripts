set -e

BROWSER='/usr/bin/chromium'
DATABASE="${HOME}/.local/share/bookmarks/bookmarks.txt"

CATEGORY=$(
  rofi -dmenu -i <"$DATABASE"
)

[ -n "$CATEGORY" ] || exit 101

"$BROWSER" "$CATEGORY"

exit 0
